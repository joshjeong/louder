<iframe id="sc-widget" src="https://w.soundcloud.com/player/?url=https://soundcloud.com/igapromotion/onerepublic-counting-stars" width="100%" height="465" scrolling="no" frameborder="no"></iframe>
<script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
<script type="text/javascript">
  (function(){
    var widgetIframe = document.getElementById('sc-widget'),
        widget       = SC.Widget(widgetIframe);
    widget.bind(SC.Widget.Events.READY, function() {
      widget.bind(SC.Widget.Events.PLAY, function() {
        widget.seekTo(<%= @fakeHostProgress %> + (new Date().getTime()/1000 - <%= @fakeHostTime %>) + 400)
        widget.pause()
        setTimeout(function(){
          widget.play()
          //prevent occasional reset that causes it to start from the beginning of the song. We can use this to set it to the exact desired time.
          widget.seekTo(<%= @fakeHostProgress %> + (new Date().getTime()*1 - <%= @fakeHostTime %>))
        }, 500);
        widget.unbind(SC.Widget.Events.PLAY)
      });
      widget.play()
    });

  }());
</script>