doctype html
html
  head
    meta(name="viewport", content="width=device-width, user-scalable=no")
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Montserrat:400,700')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='//code.jquery.com/jquery-1.11.0.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='//connect.soundcloud.com/sdk.js')
    script(src='//d3js.org/d3.v3.min.js')
    script(src='/js/vendor/js/typeahead.bundle.min.js')
    script(src='/js/application.js')
    title Super Awesome Louder Player
  body
    .widget
    .logo
    .wrapper
      .screens
        #connect-button.fa.fa-paper-plane.fa-5x
          h3 Connect to host
        i#wait-screen.fa.fa-camera-retro.fa-5x
          h3 Waiting for host to pick a song
        #guest-playing.fa.fa-child.fa-5x
          h3 Now Playing Song!
      #player
        #soundCloudURL
          input(type="text" class="search-field" placeholder="Search")
        #widget
    #d3
  script(src='https://w.soundcloud.com/player/api.js')
  script(src='/js/widget.js')

